<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Add new blog</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-4">
            <form action="/blog" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="imageInput">Cover Name</label>
                    <input type="file" class="form-control" id="imageInput" name="coverImg">
                </div>
                <div class="form-group">
                    <label for="titleInput">Title</label>
                    <input name="title" type="text" class="form-control" id="titleInput" placeholder="Enter title">
                </div>
                <div class="form-group">
                    <label for="textInput">Content</label>
                    <textarea name="content" class="form-control" id="textInput" rows="3" placeholder="Enter text"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <%- include('./partials/script') %>
</body>

</html>